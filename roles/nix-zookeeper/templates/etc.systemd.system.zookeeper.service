[Unit]
Description=Zookeeper
After=network.target

[Service]
Type=simple
User={{ nix_user }}
Environment="ZOOCFGDIR={{ zookeeper_confdir }}"

ExecStart={{ zookeeper_bin_start }}

Restart=Always
RestartSec=20
LimitNOFILE=16384
CPUAccounting=true
MemoryAccounting=true
KillMode=process

[Install]
WantedBy=multi-user.target
